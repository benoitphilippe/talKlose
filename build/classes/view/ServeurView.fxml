<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="223.0" prefWidth="534.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="controller.ServeurViewController">
    <center>   
        <VBox> 
            <HBox>
                <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="534.0" text="Serveur RMI : " textAlignment="CENTER" />
            </HBox>
            <HBox>
                <Label text="Message : " textAlignment="CENTER" />
                <TextArea fx:id="message" />
            </HBox>
        </VBox>
                
    </center>
    
   <bottom>    
       <HBox>
           <Button fx:id="start" contentDisplay="CENTER" mnemonicParsing="false" onAction="#start" prefWidth="400.0" text="Lancer le serveur!" textAlignment="CENTER" />
           <Button fx:id="stop" contentDisplay="CENTER" mnemonicParsing="false" onAction="#stop" prefWidth="400.0" text="Fermer le serveur!" textAlignment="CENTER" /> 
       </HBox>
    </bottom>
 
    
